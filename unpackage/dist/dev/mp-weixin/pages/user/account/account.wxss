page {
  background-color: #f2f5f7;
}
.acc {
  padding-top: 30rpx;
  width: 100%;
}
.acc_top {
  border-radius: 16rpx;
  width: 90%;
  height: auto;
  margin: auto;
  background-color: white;
  padding-bottom: 32rpx;
}
.acc_top .top_core {
  height: 200rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.acc_top .divider {
  width: 1px;
  height: 100rpx;
  background-color: #ccc;
}
.acc_top .top_rech {
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.acc_top .top_number {
  font-size: 40rpx;
  font-weight: bold;
}
.acc_top .top_text {
  font-size: 26rpx;
}
.acc_top .top_btn {
  width: 90%;
  margin: auto;
  background-color: #ff0066;
  color: white;
  font-weight: bold;
  height: 70rpx;
  line-height: 70rpx;
}
.acc_top .top_title {
  padding-top: 20rpx;
  width: 90%;
  margin: auto;
  text-align: justify;
  font-size: 26rpx;
  color: #686868;
}
.acc_bot {
  width: 90%;
  margin: auto;
  min-height: 600rpx;
  height: auto;
  background-color: white;
  margin-top: 30rpx;
  padding-bottom: 32rpx;
  margin-bottom: 32rpx;
  border-radius: 16rpx;
}
.acc_bot .bot_sub {
  width: 60%;
  margin: auto;
}
.acc_bot .left {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.acc_bot .left_rech {
  font-weight: bold;
}
.acc_bot .left_time {
  padding-top: 20rpx;
  font-size: 22rpx;
}
.acc_bot .right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.acc_bot .right_gold {
  color: #e30806;
  font-weight: bold;
}
.acc_bot .right_order {
  padding-top: 20rpx;
  font-size: 22rpx;
}

